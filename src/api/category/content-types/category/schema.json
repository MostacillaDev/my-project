{
  "kind": "collectionType",
  "collectionName": "categories",
  "info": {
    "singularName": "category",
    "pluralName": "categories",
    "displayName": "Category"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string"
    },
    "icon": {
      "allowedTypes": [
        "images"
      ],
      "type": "media",
      "multiple": false,
      "required": true
    },
    "color": {
      "type": "string",
      "required": false,
      "default": "#ffffff",
      "regex": "\\b(?:rgba?|hsl?a?|#?[a-f0-9]{3,6})\\b"
    },
    "products": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::producto.producto",
      "mappedBy": "categories"
    }
  }
}
